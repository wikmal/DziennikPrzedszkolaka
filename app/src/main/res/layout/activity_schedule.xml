<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8DFF5"
    tools:context="com.weteam.weteam.dziennikprzedszkolaka.teacher.ScheduleActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout1">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/schedule"
            android:textSize="36sp"
            android:layout_marginBottom="100dp"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        android:scrollbars="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            >

            <Button
                android:id="@+id/viewSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/view_schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="viewSchedule"
                android:background="#0090ff"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/deleteSchedule"
                android:background="#0090ff"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/edit_schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="editSchedule" />

            <Button
                android:id="@+id/createSchedule"
                android:background="#0090ff"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/create_schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="createSchedule" />




        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
